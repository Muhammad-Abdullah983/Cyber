{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
, "app/component/Hero-section.jsx", "app/component/Apple-Products.jsx", "app/component/AllProducts.jsx", "app/component/category.jsx", "app/component/Discounts-cards.jsx", "app/component/Navbar.jsx", "app/component/Popular-Products.jsx", "app/layout.jsx", "app/page.jsx"  ],
  "exclude": ["node_modules"]
}
